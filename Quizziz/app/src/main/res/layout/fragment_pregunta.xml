<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#5E35B1" android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:gravity="center"
        android:background="@android:color/white" android:padding="24dp">

        <TextView
            android:id="@+id/tvPregunta"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Pregunta" android:textSize="18sp"
            android:textStyle="bold" android:layout_marginBottom="16dp" />

        <Button android:id="@+id/btnResp1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" />
        <Button android:id="@+id/btnResp2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" />
        <Button android:id="@+id/btnResp3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" />
        <Button android:id="@+id/btnResp4" android:layout_width="match_parent" android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
